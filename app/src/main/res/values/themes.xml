<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="buttonNumLand">
        <item name="android:layout_width">@dimen/calc_button</item>
        <item name="android:layout_height">@dimen/calc_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="layout_constraintCircleRadius">@dimen/distance_land</item>
        <item name="layout_constraintCircle">@+id/fab</item>
    </style>


    <style name="buttonNumPort">
        <item name="android:layout_width">@dimen/calc_button</item>
        <item name="android:layout_height">@dimen/calc_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="layout_constraintCircleRadius">@dimen/distance_port</item>
        <item name="layout_constraintCircle">@+id/fab</item>
    </style>

    <style name="buttonOperation">
        <item name="android:layout_width">@dimen/calc_button</item>
        <item name="android:layout_height">@dimen/calc_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="layout_constraintCircleRadius">@dimen/small_distance</item>
        <item name="layout_constraintCircle">@+id/fab</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCoolStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/stdSizeText</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">

    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>

    </style>
</resources>